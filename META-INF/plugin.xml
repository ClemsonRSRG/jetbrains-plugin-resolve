<idea-plugin version="2">
    <id>edu.clemson.resolve.plugin</id>
    <name>RESOLVE langauge plugin</name>
    <version>1.0</version>
    <vendor email="dtw.welch@gmail.com" url="https://github.com/Welchd1/resolve-intellij-plugin">RESOLVE Project</vendor>

    <description><![CDATA[
        <p>
        This plugin is designed to provide Intellij support for the RESOLVE
        specification and programming language. Currently supported features
        inclue: syntax highlighting, goto-declaration, and usage search for
        operations, variables, modules, and facilities.
    ]]></description>

    <change-notes><![CDATA[
        Add change notes here.<br>
        <em>most HTML tags may be used</em>
        ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="131"/>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <internalFileTemplate name="Concept Module"/>
        <internalFileTemplate name="Concept Implementation Module"/>
        <internalFileTemplate name="Enhancement Module"/>
        <internalFileTemplate name="Enhancement Implementation Module"/>
        <internalFileTemplate name="Precis Module"/>
        <internalFileTemplate name="Facility Module"/>
</extensions>

<application-components>
    <!-- Add your application components here -->
    </application-components>

    <project-components>

    </project-components>

    <actions>
        <!--<action id="RESOLVE.NewRESOLVEFile"
            class="edu.clemson.resolve.plugin.RESOLVECreateFileAction"
            text="RESOLVE File" description="Create new RESOLVE file">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
        </action>-->
    </actions>

</idea-plugin>