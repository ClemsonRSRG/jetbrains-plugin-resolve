<idea-plugin version="2">
  <id>grammars.edu.plugin</id>
  <name>RESOLVE langauge plugin</name>
  <version>1.0</version>
  <vendor email="dtw.welch@gmail.com" url="https://github.com/Welchd1/resolve-intellij-plugin-v4">RESOLVE Project</vendor>

  <description><![CDATA[
      <p>
      This plugin is designed to provide Intellij support for the RESOLVE
      specification and programming language. Currently supported features
      inclue: syntax highlighting, goto-declaration, and usage search for
      operations, variables, modules, and facilities.
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
      <fileTypeFactory implementation="edu.clemson.resolve.plugin.RESOLVEFileTypeFactory"/>
      <lang.parserDefinition language="RESOLVE" implementationClass="edu.clemson.resolve.plugin.RESOLVEParserDefinition"/>
    <!--  <lang.syntaxHighlighterFactory key="RESOLVE" implementationClass="java.edu.clemson.resolve.plugin.RESOLVESyntaxHighlighterFactory"/> -->
     <!-- <colorSettingsPage implementation="grammars.edu.plugin.configdialogs.RESOLVEColorsPage"/> -->
      <!-- Add your extensions here -->
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>

  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>