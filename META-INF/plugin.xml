<idea-plugin version="2">
    <id>edu.clemson.resolve.plugin</id>
    <name>RESOLVE langauge plugin</name>
    <version>1.0</version>
    <vendor email="dtw.welch@gmail.com" url="https://github.com/Welchd1/resolve-intellij-plugin">RESOLVE Project</vendor>

    <description><![CDATA[
        <p>
        This plugin is designed to provide Intellij support for the RESOLVE
        specification and programming language. Currently supported features
        inclue: syntax highlighting, goto-declaration, and usage search for
        operations, variables, modules, and facilities.
    ]]></description>

    <change-notes><![CDATA[
        Add change notes here.<br>
        <em>most HTML tags may be used</em>
        ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="131"/>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">

        <!--<stubIndex implementation="edu.clemson.resolve.plugin.stubs.index.RESOLVEAllVisibleNamesIndex"/>
        <stubIndex implementation="edu.clemson.resolve.plugin.stubs.index.RESOLVETypesIndex"/>-->

        <!-- sdk -->
        <projectService serviceInterface="edu.clemson.resolve.plugin.sdk.RESOLVESdkService" serviceImplementation="edu.clemson.resolve.plugin.sdk.RESOLVESmallIDEsSdkService" overrides="false"/>

        <fileIconPatcher implementation="edu.clemson.resolve.plugin.RESOLVEFileIconPatcher"/>
        <fileTypeFactory implementation="edu.clemson.resolve.plugin.RESOLVEFileTypeFactory"/>

        <lang.parserDefinition language="RESOLVE" implementationClass="edu.clemson.resolve.plugin.RESOLVEParserDefinition"/>

        <completion.contributor language="RESOLVE" implementationClass="edu.clemson.resolve.plugin.completion.RESOLVECompletionContributor"/>

        <!-- <spellchecker.support language="RESOLVE" implementationClass="edu.clemson.resolve.plugin.inspections.RESOLVESpellcheckingStrategy"/> -->
        <!--<lang.foldingBuilder language="RESOLVE" implementationClass="edu.clemson.resolve.plugin.editor.RESOLVEFoldingBuilder"/>-->
        <!-- <externalAnnotator language="RESOLVE" implementationClass="edu.clemson.resolve.plugin.annotations.RESOLVEExternalAnnotator"/> -->
        <!-- <psi.referenceContributor implementation="edu.clemson.resolve.plugin.RESOLVEReferenceContributor"/> -->

</extensions>

<application-components>
    <!-- Add your application components here -->
    </application-components>

    <project-components>

    </project-components>

    <actions>
